<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Weather App</title>
		<link rel="stylesheet" href="styles/styles.css" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
			rel="stylesheet" />
		<script
			src="https://kit.fontawesome.com/47496cab62.js"
			crossorigin="anonymous"></script>
	</head>
	<body>
		<section id="weather-app">
			<div class="container">
				<div class="main-con">
					<form id="weather-form" action="/submit" method="POST">
						<div class="search-bar">
							<input
								type="text"
								name="location"
								placeholder="Input the name of any city" />
							<!-- <input type="submit" value="search" /> -->
							<button id="music-btn" type="submit">
								Search
								<i class="fa-solid fa-magnifying-glass"></i>
							</button>
						</div>
					</form>
					<!-- <input type="submit" form="weather-form" value="French"  /> -->
					<div class="lang-btn">
						<button id="french" onclick="window.location.href='/french'">
							French
						</button>
						<button id="french" onclick="window.location.href='/french'">
							Spanish
						</button>
						<button id="french" onclick="window.location.href='/french'">
							English
						</button>
					</div>
				</div>

				<div class="weather-result">
					<img class="weather-res" src="images/weather-bg.jpg" alt="" />
					<div class="con">
						<div class="time-con">
							<% if(locals.result){ %>
							<div class="time-display">
								<h2 class="tooltip">TIME</h2>

								<%= result.time %>
							</div>
							<% } %>
						</div>

						<div class="url-display">
							<%# if(locals.template){ %> <%#- template %> <%# }%>
							<%if(locals.result) { %>
							<!-- <div class="qr-con"> -->
							<img class="qr-code" src="images/qr.png" alt="" />
							<!-- </div> -->
							<% } %>
						</div>
						<div class="description">
							<div id="cnt" class="country-ttl"><%= result.location %></div>
							<% if(locals.result){ %>
							<div class="summary"><%= result.weather %></div>
							<div class="descriptive"><%= result.description %></div>
							<% } %>
						</div>

						<div class="weather-report">
							<% if(locals.result){ %>
							<div class="coco temp-con">
								<h2 class="tooltip">TEMP</h2>
								<%= result.temp %>
							</div>
							<div class="coco humidity-con">
								<h2 class="tooltip">HUMIDITY</h2>
								<%= result.humidity %>
							</div>
							<div class="coco pressure-con">
								<h2 class="tooltip">PRESSURE</h2>
								<%= result.pressure %>
							</div>
							<% } %>
						</div>
					</div>

					<h3 class="powered">Powered by ðŸ’ªDevyalchemist</h3>
				</div>
			</div>
		</section>
		<script src="scripts/index.js"></script>
	</body>
</html>
